<div class="ui four column center aligned grid">
  <% if notice %>
    <div class="ui success message">
      <i class="close icon"></i>
      <div class="header">
        <%= notice %>
      </div>
    </div>
  <% end %>

  <div></div>
  <h1 class="ui header">Dashboard</h1>
  <div class="column">
    <div class="ui container">
      <h3 class="ui header">Students</h3>
      <% @course.students.each do |student| %>
            <div class="ui container">
              <div class="content">
                <%= link_to("#{student.first_name} #{student.last_name}", course_students_path(@course, student)) %>
              </div>
            </div>
      <% end %>
    </div>
  </div>
  <div class="column">
    <div class="ui container">
    </div>
  </div>
  <div class="column">
    <div class="ui container">
      <div class="ui button">
        <%= link_to('Assign a test', new_course_test_assignment_path(@course)) %>
      </div>

      <h3 class="ui header">Students</h3>
      <% @course.students.each do |student| %>
          <div class="ui container">
            <div class="content">
              <%= link_to("#{student.first_name} #{student.last_name}", course_students_path(@course, student)) %>
            </div>
          </div>
      <% end %>

    </div>
  </div>
</div>
