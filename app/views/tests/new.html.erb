<div class="column">
  <div class="ui container">
    <div></div>
    <h1 class="ui header">Create an Assessment</h1>

    <%= render('form', test: @test) %>

    <div class="ui modal">
      <i class="close icon"></i>
      <div class="header">
        Create a Question
      </div>

      <!--Tab Menu-->
      <div class="ui top attached tabular menu">
        <a class="item active" data-tab="first">Multiple Choice</a>
        <a class="item" data-tab="second">Short Response</a>
        <a class="item" data-tab="third">Extended Response</a>
      </div>

      <!-- First tab (multiple choice) -->
      <div class="ui bottom attached tab segment active" data-tab="first">
        <div class="ui container">

          <form class="ui form small">
            <div class="field">
              <h4 class="ui header small">Question text</h4>
              <textarea rows="2" name="question[description]" id="question_description"></textarea>
            </div>

            <div class="field">
              <h4 class="ui header small">Answer options</h4>
              <div class="inline fields">
                <label>A.</label>
                <input type="text" name="a">

                <span style="width: 10px;"></span>

                <div class="inline field">
                  <div class="ui toggle checkbox">
                    <input type="checkbox" tabindex="0" class="hidden">
                    <label>Correct?</label>
                  </div>
                </div>
              </div>

              <div id="add-answer-option" class="ui button">Add another answer option</div>
            </div>
          </form>

        </div>
      </div>

      <!-- Second tab (short response) -->
      <div class="ui bottom attached tab segment" data-tab="second">
        <div class="ui container">

          <form class="ui form small">
            <div class="field">
              <h4 class="ui header small">Question text</h4>
              <textarea rows="2" name="question[description]" id="question_description"></textarea>
            </div>
          </form>

        </div>
      </div>

      <!-- Third tab (extended response) -->
      <div class="ui bottom attached tab segment" data-tab="third">
        <div class="ui container">

          <form class="ui form small">
            <div class="field">
              <h4 class="ui header small">Question text</h4>
              <textarea rows="2" name="question[description]" id="question_description"></textarea>
            </div>
          </form>

        </div>
      </div>
      <div class="actions">
        <div class="ui button primary">Save Question</div>
      </div>
    </div>

    <%= link_to('Back', courses_path) %>
  </div>
</div>
