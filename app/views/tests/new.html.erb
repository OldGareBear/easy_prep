<div class="column">
  <div class="ui container">
    <div></div>
    <h1 class="ui header">Create an Assessment</h1>

    <%= render('form', test: @test) %>

    <div class="ui modal">
      <i class="close icon"></i>
      <div class="header">
        Create a Question
      </div>

      <!--Tab Menu-->
      <div class="ui top attached tabular menu">
        <a class="item active" data-tab="first">Multiple Choice</a>
        <a class="item" data-tab="second">Short Response</a>
        <a class="item" data-tab="third">Extended Response</a>
      </div>

      <!-- First tab (multiple choice) -->
      <div class="ui bottom attached tab segment active" data-tab="first">
        <div class="question ui container">
          <%= render('multiple_choice', question_index: 0, question: nil, ) %>
        </div>
      </div>

      <!-- Second tab (short response) -->
      <div class="ui bottom attached tab segment" data-tab="second">
        <div class="question ui container">
          <%= render('short_response', question_index: 0, question: nil, ) %>
        </div>
      </div>

      <!-- Third tab (extended response) -->
      <div class="ui bottom attached tab segment" data-tab="third">
        <div class="question ui container">
          <%= render('extended_response', question_index: 0, question: nil, ) %>
        </div>
      </div>

      <div class="actions">
        <div id="save-question" class="ui button primary">Save Question</div>
      </div>
    </div>

    <%= link_to('Back', new_course_test_assignment_path(@course)) %>
  </div>
</div>
